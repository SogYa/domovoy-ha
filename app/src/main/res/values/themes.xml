<resources>
    <!-- Base application theme. -->
    <style name="Theme.DomovoyHA" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/background_blue</item>
        <item name="colorOnPrimary">@color/font_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4FC3F7</item>
        <item name="colorSecondaryVariant">#1976D2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_light_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/main_light_gray</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/main_light_gray</item>
        <item name="colorOnSurface">@color/font_black</item>
        <item name="colorOnSurfaceVariant">@color/font_gray</item>
        <item name="colorSurfaceVariant">@color/main_light_gray</item>
        <item name="colorSecondaryContainer">@color/background_blue</item>
    </style>



    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_out</item>
        <item name="android:windowExitAnimation">@anim/fade_in</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.DomovoyHA">
        <item name="android:windowBackground">
            @drawable/splash_screen
        </item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="Theme.DomovoyHA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DomovoyHA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DomovoyHA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>