<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.BottomNavigationView.Firebase"
        parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@color/font_black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
    <style name="App.Custom.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="colorPrimary">@color/main_blue</item>
    </style>

    <style name="App.Custom.AutoCompite" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="simpleItemSelectedColor">@color/font_black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="simpleItemSelectedRippleColor">@color/main_light_gray</item>
    </style>

</resources>